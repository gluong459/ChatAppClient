<Window x:Class="ChatAppClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat App SQL - Final Version" Height="600" Width="950" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter Property="Background" TargetName="Bd" Value="#E6F2FF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="Bd" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="#DDDDDD" BorderThickness="0,0,1,0" Background="#F5F5F5">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Ellipse Width="40" Height="40" Fill="#007ACC"/>
                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="lblWelcome" Text="User" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="Online" Foreground="Green" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock Text="Quản lý" FontWeight="Bold" Margin="0,0,0,5" Foreground="#666"/>
                    <TextBox x:Name="txtSearch" Height="30" Padding="5"/>
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnAddFriend" Content="Thêm Bạn (+)" Margin="0,0,2,0" Background="#FFF" BorderBrush="#CCC" Height="25" Click="btnAddFriend_Click"/>
                        <Button Content="Tạo Nhóm" Grid.Column="1" Margin="2,0,0,0" Background="#FFF" BorderBrush="#CCC" Height="25" Click="btnCreateGroup_Click"/>
                    </Grid>
                </StackPanel>

                <Grid Grid.Row="2" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="BẠN BÈ" FontWeight="Bold" Foreground="#888" Margin="0,0,0,5"/>

                    <ListBox x:Name="lstFriends" Grid.Row="1" BorderThickness="0" Background="Transparent" SelectionChanged="lstFriends_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0" Width="40" Height="40" Margin="0,0,10,0">
                                        <Ellipse Fill="#007ACC" Width="40" Height="40"/>
                                        <Border Width="12" Height="12" CornerRadius="6" 
                            BorderThickness="2" BorderBrush="White"
                            Background="{Binding StatusColor}"
                            VerticalAlignment="Bottom" HorizontalAlignment="Right"
                            Margin="-2,-2"/>
                                    </Grid>

                                    <TextBlock Grid.Column="1" Text="{Binding Name}" 
                           FontSize="14" FontWeight="SemiBold" 
                           VerticalAlignment="Center" 
                           TextTrimming="CharacterEllipsis"/>
                                    <Ellipse Grid.Column="2" Width="12" Height="12" Fill="#0084FF" 
                         VerticalAlignment="Center" 
                         Margin="10,0,10,0"
                         Visibility="{Binding HasNewMessage, Converter={StaticResource BoolToVis}}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>

                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="NHÓM CHAT" FontWeight="Bold" Foreground="#888" Margin="0,0,0,5"/>
                    <ListBox x:Name="lstGroups" Grid.Row="1" BorderThickness="0" Background="Transparent" SelectionChanged="lstGroups_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="#" FontWeight="Bold" Foreground="Orange" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding Name}" FontSize="14"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>

                <Button x:Name="btnLogout" Grid.Row="4" Content="Đăng xuất" Background="#FFDDDD" Foreground="Red" BorderThickness="0" Height="30" Click="btnLogout_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="15,0">
                <TextBlock x:Name="lblCurrentChat" Text="Chọn một cuộc hội thoại..." VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold" Foreground="#333"/>
            </Border>

            <ListBox x:Name="listMessages" Grid.Row="1" Margin="10" BorderThickness="0" 
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                     HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="{Binding Alignment}" Margin="0,2">
                            <Border CornerRadius="15" Padding="12,8" Background="{Binding BackgroundColor}" MaxWidth="500">
                                <TextBlock Text="{Binding Content}" Foreground="{Binding TextColor}" TextWrapping="Wrap" FontSize="14"/>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Grid Grid.Row="2" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtMessage" Height="40" Padding="10" FontSize="14" VerticalContentAlignment="Center" BorderBrush="#DDD" KeyDown="txtMessage_KeyDown"/>
                <Button x:Name="btnSend" Content="Gửi" Grid.Column="1" Margin="10,0,0,0" Background="#007ACC" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="btnSend_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>