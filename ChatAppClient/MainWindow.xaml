<Window x:Class="ChatAppClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ứng dụng Chat" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/> <ColumnDefinition Width="*"/>   </Grid.ColumnDefinitions>

        <Border BorderBrush="LightGray" BorderThickness="0,0,1,0" Background="#F0F0F0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Column="0" Background="#f0f0f0">
                    <StackPanel Margin="10">

                        <TextBlock x:Name="lblWelcome" 
                   Text="Hi User" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

                        <Button x:Name="btnLogout" 
                Content="Đăng xuất" 
                Background="#FF5555" Foreground="White" 
                Height="30" 
                Click="btnLogout_Click"/>

                    </StackPanel>
                </Border>

                <ListBox x:Name="listUsers" Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="0,10">
                </ListBox>

                
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

            <TextBlock x:Name="lblCurrentChat" Text="Chọn hội thoại để bắt đầu" FontWeight="Bold" Margin="10" Grid.Row="0"/>
            <Separator VerticalAlignment="Bottom" Grid.Row="0"/>

            <ListBox x:Name="listMessages" Grid.Row="1" Margin="5" BorderThickness="0"/>

            <Grid Grid.Row="2" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtMessage" Height="40" Padding="5" VerticalContentAlignment="Center"/>
                <Button Content="Gửi" Width="60" Margin="5,0,0,0" Grid.Column="1" Click="btnSend_Click"/> 
            </Grid>
        </Grid>
    </Grid>
</Window>