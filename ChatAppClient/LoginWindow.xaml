<Window x:Class="ChatAppClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập" Height="400" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="ĐĂNG NHẬP" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="Tên đăng nhập:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Height="30" Padding="5"/>

            <TextBlock Text="Mật khẩu:" Margin="0,15,0,5"/>
            <PasswordBox x:Name="txtPassword" Height="30" Padding="5"/>

            <Button x:Name="btnLogin" Content="Đăng nhập" Height="40" Margin="0,30,0,10" 
                    Background="#007ACC" Foreground="White" FontSize="16" FontWeight="Bold"
                    Click="btnLogin_Click" IsDefault="True"/>

            <TextBlock x:Name="lblStatus" Text="" Foreground="Red" HorizontalAlignment="Center"/>

            <TextBlock Text="Chưa có tài khoản? Đăng ký ngay" 
                       HorizontalAlignment="Center" Cursor="Hand" Foreground="#555" Margin="0,10,0,0"
                       MouseLeftButtonDown="LinkRegister_Click"/>
        </StackPanel>
    </Grid>
</Window>